<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.graphics.files.AddNewFile">
   <children>
      <Label layoutX="72.0" layoutY="57.0" text="Add New File:">
         <font>
            <Font size="45.0" />
         </font>
      </Label>
      <VBox layoutX="72.0" layoutY="170.0" prefHeight="323.0" prefWidth="297.0">
         <children>
            <Label text="Patient First Name:" />
            <TextField fx:id="firstNameTextField" />
            <Label text="Patient Last Name:" />
            <TextField fx:id="lastNameTextField" />
            <Label text="Age:" />
            <TextField fx:id="ageTextField" />
            <Label text="Gender:" />
            <ChoiceBox fx:id="genderChoiceBox" prefWidth="150.0" />
            <Label text="Occupation:" />
            <TextField fx:id="occupationTextField" />
            <Label text="Reference:" />
            <TextField fx:id="referenceTextField" />
         </children>
      </VBox>
      <VBox layoutX="538.0" layoutY="170.0" prefHeight="323.0" prefWidth="297.0">
         <children>
            <Label text="Education" />
            <ChoiceBox fx:id="educationChoiceBox" prefWidth="150.0" />
            <Label text="Home Address:" />
            <TextArea fx:id="homeAddressTextArea" prefHeight="133.0" prefWidth="297.0" />
            <Label text="Work Address:" />
            <TextArea fx:id="workAddressTextArea" prefHeight="133.0" prefWidth="297.0" />
         </children>
      </VBox>
      <Button fx:id="addButton" layoutX="787.0" layoutY="75.0" mnemonicParsing="false" onAction="#addButtonPress" text="Add" />
      <Button fx:id="backToPatientListButton" layoutX="741.0" layoutY="75.0" mnemonicParsing="false" onAction="#backToPatientListButtonPress" text="&lt;" />
   </children>
</AnchorPane>
